<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:id="@+id/textView"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botaoStart"
            android:id="@+id/btnStart"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:onClick="iniciarAplicacao"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnStop"
            android:id="@+id/btnStop" android:layout_alignBottom="@+id/btnStart" android:layout_toRightOf="@+id/btnStart"
            android:enabled="false" android:onClick="pararAplicacao"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtLog"
            android:layout_below="@+id/btnStart"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"/>

</RelativeLayout>
